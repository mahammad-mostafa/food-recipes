<%= render(partial: 'partials/errors') %>
<%= form_with(model: @recipe_food, url: recipe_recipe_foods_path) do |form| %>
  <%= form.label :food_id %>
  <%= form.collection_select :food_id, @foods, :id, :name, include_blank: true %>
  <%= form.label :quantity %>
  <%= form.number_field :quantity, min: 1 %>
  <%= form.submit 'Store' %>
<% end %>