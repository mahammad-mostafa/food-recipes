<div class="title"><h2>Register</h2></div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.label :name, 'Name <em>(required)</em>'.html_safe %>
  <%= f.text_field :name %>
  <%= f.label :email, 'Email <em>(required)</em>'.html_safe %>
  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  <%= f.label :password, "Password <em>(#{@minimum_password_length if @minimum_password_length} characters minimum)</em>".html_safe %>
  <%= f.password_field :password, autocomplete: "new-password" %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  <%= f.submit "Register" %>
  <%= render "devise/shared/links" %>
<% end %>